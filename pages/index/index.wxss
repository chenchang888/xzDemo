.index-wrapper {}

.index-top-wrapper {
   flex: 1;
   overflow-y: auto;
   -webkit-overflow-scrolling: touch;
}

.index-bottom-wrapper {
   display: flex;
   justify-content: space-around;
   align-items: center;
   height: 100rpx;
   background: #2295fa;
}

.index-bottom-wrapper .nav-item {
   display: flex;
   flex-direction: column;
   align-items: center;
}

.index-bottom-wrapper .nav-item image {
   height: 45rpx;
}

.index-bottom-wrapper .nav-item text {
   margin-top: 10rpx;
   font-size: 12px;
   color: #fff;
}

.index-top-wrapper .top-banner {
   position: relative;
}

.index-top-wrapper .top-banner image {
   width: 100%;
}

.index-top-wrapper .feedback {
   position: absolute;
   width: 480rpx;
   height: 56rpx;
   display: flex;
   align-items: center;
   justify-content: center;
   transform: translate3d(-50%, 0, 0);
   left: 50%;
   bottom: 40rpx;
   background: #fff;
   border-radius: 20px;
}

.index-top-wrapper .feedback image {
   height: 16px;
   margin-right: 16rpx;
}

.index-top-wrapper .feedback text {
   display: flex;
   align-items: center;
   justify-content: center;
   font-size: 12px;
}

.four-item-wrapper {
   display: flex;
   justify-content: center;
   padding: 50rpx 0 46rpx 0;
   border-bottom: 1px solid #dfdfdf;
   background: #fff;
}

.four-item-wrapper .item-box {
   width: 670rpx;
   display: flex;
   justify-content: space-around;
}

.four-item-wrapper .item {
   display: flex;
   flex-direction: column;
   align-items: center;
   width: 160rpx;
}

.four-item-wrapper image {
   width: 100%;
   margin-bottom: 17rpx;
   box-shadow: 0px 2px 2px #eee;
   height: 81px;

}

.four-item-wrapper text {
   font-size: 14px;
}


.function-list {
   margin: 60rpx 20rpx 0;
   border-radius: 0 0 10px 10px;
}

.function-list .top-bar {
   display: flex;
   height: 80rpx;
}

.function-list .top-bar>view {
   display: flex;
   align-items: center;
   justify-content: center;
   width: 50%;
   height: 80rpx;
   background: #ebeaea;
   border-radius: 10px 10px 0 0;
   transition: .3s ease;
}

.function-list .top-bar .active {
   transform: translate3d(0, -10rpx, 0);
   height: 90rpx;
   background: #fff;
   color: #2295fa;
   font-size: 18px;
}

.function-list .list-wrapper {
   display: flex;
   justify-content: center;
   background: #fff;
}

.function-list .list {
   height: 230px;
   overflow-y: auto;
   -webkit-overflow-scrolling: touch;
   display: flex;
   flex-wrap: wrap;
   margin-top: 30rpx;
   /* justify-content: center; */
   /* 少于8个时使用以下样式，使其居中 */
   padding: 10px 35rpx 0;
}

.function-list .list .list-item {
   width: 150rpx;
   display: flex;
   flex-direction: column;
   align-items: center;
   justify-content: center;
   box-shadow: 0 0 8px #ddd;
   padding: 16rpx 0;
   border-radius: 8rpx;
   margin-right: 15rpx;
   margin-bottom: 40rpx;
}

