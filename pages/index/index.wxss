.video-wrapper {
   margin-top: 40rpx;
   padding-bottom: 10px;
   background: #fff;
}

.video-wrapper .video-box {
   width: 710rpx;
   margin: 10px auto;
   position: relative;
   background: #fff;
}

.video-wrapper .video-box image {
   width: 100%;
   display: block;
}

.video-wrapper .video-box .bottom-bar {
   width: 100%;
   height: 52rpx;
   display: flex;
   align-items: center;
   padding-left: 10px;
   position: absolute;
   left: 0;
   bottom: 0;
   font-size: 22rpx;
   color: #fff;
   background: rgba(0, 0, 0, .5);
}

.policy-wrapper {
   margin-top: 40rpx;
   background: #fff;
}

.policy-wrapper .list {
   width: 616rpx;
   margin: 0 auto;
   padding-bottom: 1px;
}

.policy-wrapper .list-item {
   display: flex;
   flex-direction: column;
   align-items: center;
   width: 100%;
   padding: 20rpx 0 30rpx;
   margin-top: 20rpx;
   margin-bottom: 20rpx;
   box-shadow: 0 0 8px #ddd;
   border-radius: 6px;
}

.policy-wrapper .list-item .btn {
   display: inline-block;
   width: 80px;
   text-align: center;
   padding: 5px;
   margin-left: 16rpx;
   margin-bottom: 22rpx;
   font-size: 12px;
   color: #fff;
   background: #5dc3fe;
}

.policy-wrapper .list-item .text-img-box {
   display: flex;
   align-items: center;
}

.policy-wrapper .list-item .l-box {
   width: 440rpx;
   height: 120rpx;
   display: flex;
   align-items: center;
   padding-left: 20rpx;
   margin-right: 30rpx;
   box-sizing: border-box;
   background: #f8f8f8;
   border-radius: 6px;
}

.policy-wrapper .list-item .l-box image {
   width: 20px;
   margin-right: 10px;
}

.policy-wrapper .list-item .l-box text {
   flex: 1;
   font-size: 12px;
}

.policy-wrapper .list-item .text-img-box>image {
   width: 105rpx;
}

.mask {
   position: fixed;
   width: 100vw;
   height: 100vh;
   background-color: rgba(0, 0, 0, .6);
}

.mask .box {
   width: 648rpx;
   top: 356rpx;
   left: 50%;
   transform: translateX(-50%);
   position: absolute;
   background-color: #fff;
   border-radius: 16rpx;
}

.mask .box .h2 {
   margin: 0 20rpx;
   line-height: 98rpx;
   border-bottom: 1px solid #ddd;
   text-align: center;
   font-weight: bold;
   color: #666;
}

.mask .box .ul {
   padding: 20rpx 20rpx 20rpx 50rpx;
}

.mask .box .ul .li {
   display: flex;
   align-items: center;
   padding: 20rpx 0;
}

.mask .box .ul .li .label {
   width: 200rpx;
   font-weight: bold;
   color: #666;
}