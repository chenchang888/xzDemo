@import "/styles/base.wxss";

.inputFontSize,
picker {
  font-size: 30rpx;
}

.form_content {
  color: #333;
}

.form_title {
  width: 100%;
  margin: 20rpx 0;
  text-align: center;
  font-weight: 700;
  font-size: 36rpx;
}

.select_category {
  display: flex;
  justify-content: center;
}

.personal,
.company {
  width: 200rpx;
  line-height: 60rpx;
  text-align: center;
  margin: 25rpx 5rpx;
  border-radius: 10rpx;
  background-color: #f8f8f8;
}

.select_active {
  background-color: var(--themeColor);
  color: #fff;
}

.weui-cell__hd_in-select-after {
  padding-left: 32rpx;
}

/* 添加图片 */
.form_img-contain {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-top: 30rpx;
}

.choose_img-box {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx 0 0 30rpx;
  border-radius: 20rpx;
  font-size: 50rpx;
  font-weight: bold;
  color: #a6a6a6;
  background-color: #eceeeb;
}

.form_img,
image {
  margin: 20rpx 0 0 30rpx;
  border-radius: 20rpx;
  width: 240rpx;
  height: 240rpx;
}

.choose_img {
  width: 60%;
  height: 60%;
  margin: 0;
}
 
.img {
  width: 0;
  height: 0;
}

.img_item{
  position: relative;
}
/* 删除icon */
.icon_container{
  position: absolute;
  top: 0;
  left: 100%;
  transform: translate(-50%,-10%);
  width: 80rpx;
  height: 80rpx;
}

/* 是否现实添加图片 */
.display {
  display: none;
}

/*  */
.next_btn {
  margin: 50rpx;
  color: #fff;
  background-color: var(--themeColor);
}

/* ---------------下一步------------- */

.content_container {
  margin-top: 30rpx;
  border-radius: 20rpx;
  background-color: #fff;
}

.weui-cells__title {
  padding: 5rpx 20rpx;
  font-size: 32rpx;
}

.carrier_selection {
  display: flex;
  flex-wrap: wrap;
}

.carrier_selection view {
  margin: 15rpx 18rpx;
  width: 200rpx;
  padding: 0 15rpx;
  line-height: 66rpx;
  text-align: center;
  border-radius: 10rpx;
  color: #fff;
  background-color: #c6c6c6;
}

.carrier_selection .active {
  color: #fff;
  background-color: var(--themeColor);
}

button {
  margin: 50rpx;
  color: #fff;
  background-color: var(--themeColor);
}

.cardImg {
  width: 100%;
}