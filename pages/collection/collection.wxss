.banner {
   position: relative;
   padding: 10px 10px 0;
   box-sizing: border-box;
}

.banner image {
   width: 100%;
   display: block;
}

.search-box {
   position: absolute;
   width: 100%;
   display: flex;
   justify-content: center;
   bottom: 60rpx;
}

.search-box .search-input {
   display: flex;
   align-items: center;
   width: 474rpx;
   padding: 4px 10px;
   margin-right: 10px;
   background: rgba(255, 255, 255, .8);
   border-radius: 20px;
   box-sizing: border-box;
}

.search-box .search-input image {
   height: 18px;
}

.search-box .search-input input {
   padding-left: 10px;
   flex: 1;
   font-size: 14px;
}

.search-box .search-btn {
   width: 120rpx;
   background: #fff;
   box-sizing: border-box;
   border: 1px solid #eee;
   display: flex;
   align-items: center;
   justify-content: center;
   font-size: 12px;
   border-radius: 28px;
   color: #333;
}

.news-bar {
   position: relative;
   height: 52px;
   margin-top: 0;
}

.news-bar .select {
   position: absolute;
   display: flex;
   align-items: center;
   padding: 6px 10px;
   right: 30rpx;
   font-size: 12px;
   color: #333;
   background: #f6f6f6;
   border-radius: 12px;
}

.news-bar .select image {
   margin-left: 10px;
   width: 8px;
}

.news-list {
   flex: 1;
   overflow-y: auto;
   -webkit-overflow-scrolling: touch;
}

.news-list .list-item {
   padding: 10px 22rpx;
   border-bottom: 1px solid #ddd;
}

.news-list .list-item .title {
   position: relative;
   display: flex;
   align-items: center;
   line-height: 20px;
   font-size: 14px;
}

.news-list .list-item .title .title-item {
  width: calc(100%);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.news-list .list-item .detail {
   position: relative;
   right: 0;
   bottom: 0;
   display: inline-block;
   padding: 0 5px;
   background: #5cc3fe;
   border-radius: 4px;
   color: #fff;
   font-size: 14px;
margin-right: 8px;

}

.news-list .list-item .bottom-bar {
   margin-top: 6px;
   display: flex;
   justify-content: space-between;
   color: #747474;
   font-size: 12px;
}