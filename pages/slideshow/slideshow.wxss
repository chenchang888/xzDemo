.news-detail-wrapper {}

.basic-info {
   padding: 10rpx 20rpx 14rpx;
   background: #fff;
}

.basic-info .title {
   line-height: 22px;
   font-size: 18px;
   font-weight: bold;
}

.basic-info .bottom-box {
   margin-top: 6px;
   display: flex;
   align-items: center;
   color: #797979;
}

.basic-info .bottom-box text {
   margin-right: 24px;
   font-size: 12px;
}

.scroll-wrapper {
   flex: 1;
   overflow-y: auto;
   -webkit-overflow-scrolling: touch;
}

.article-wrapper {
   padding: 20rpx 17rpx;
   background: #f8f8f8;
}

.public-like-share {
   display: flex;
   align-items: center;
   justify-content: space-between;
   padding: 45rpx 145rpx;
   border-bottom: 1px solid #ddd;
}

.public-like-share .item {
   display: flex;
   align-items: center;
}


.public-like-share .img-box {
   width: 20px;
   display: flex;
   align-items: center;
   margin-right: 6px;
}

.public-like-share .img-box image {
   width: 100%;
}

.public-like-share button {
   width: 100px !important;
   padding: 0 !important;
   margin: 0 !important;
   background: transparent;
   font-weight: normal;
}

.public-like-share button .item {
   justify-content: flex-end;
}

.public-like-share button image {
   width: 20px;
   margin-right: 6px;
}

.evaluation {
   padding: 15px 0;
}

.evaluation .title {
   padding: 23rpx 26rpx 14rpx;
   font-size: 16px;
   font-weight: bold;
}

.evaluation .empty-status {
   text-align: center;
}

.evaluation .empty-status image {
   width: 140rpx;
}

.evaluation .empty-text {
   margin-top: 18rpx;
   text-align: center;
   color: #ababab;
}

.bottom-bar {
   display: flex;
   justify-content: space-around;
   align-items: center;
   height: 100rpx;
   background: #2295fa;
}

.bottom-bar .bar-item {
   display: flex;
   flex-direction: column;
   align-items: center;
}

.bottom-bar .bar-item .img-box {
   height: 45rpx;
}

.bottom-bar .bar-item .img-box image {
   height: 100%;
}

.bottom-bar .bar-item image {
   height: 45rpx;
}

.bottom-bar .bar-item text {
   margin-top: 10rpx;
   font-size: 12px;
   color: #fff;
}

.bottom-bar button {
   width: 30px !important;
   padding: 0 !important;
   margin: 0 !important;
   background: transparent;
   font-weight: normal;
}


.mask {
   position: fixed;
   width: 100vw;
   height: 100vh;
   background-color: rgba(0, 0, 0, .6);
}

.mask .box {
   width: 648rpx;
   top: 356rpx;
   left: 50%;
   transform: translateX(-50%);
   position: absolute;
   background-color: #fff;
   border-radius: 16rpx;
}

.mask .box .h2 {
   margin: 0 20rpx;
   line-height: 98rpx;
   border-bottom: 1px solid #ddd;
   text-align: center;
   font-weight: bold;
   color: #666;
}

.mask .box .ul {
   padding: 20rpx 20rpx 20rpx 50rpx;
}

.mask .box .ul .li {
   display: flex;
   align-items: center;
   padding: 20rpx 0;
}

.mask .box .ul .li .label {
   width: 200rpx;
   font-weight: bold;
   color: #666;
}
.content {
   margin-top: 20rpx;
}

.content .textarea {
   margin: 0 auto;
   display: block;
   width: 560rpx;
   padding: 20rpx;
   /* padding: 20rpx 20rpx 60rpx 20rpx; */
   box-sizing: border-box;
   background-color: #f4f4f5;
   overflow-y: auto;
   overflow-x: hidden;
}

/* .content .textarea textarea {
   width: 100%;
} */

.content .btn {
   margin: 20rpx 30rpx;
   display: flex;
   align-items: center;
   justify-content: flex-end;
}

.content .btn view {
   width: 140rpx;
   height: 70rpx;
   font-size: 24rpx;
   display: flex;
   align-items: center;
   justify-content: center;
   margin-left: 20rpx;
   border: 1px solid #cdcdcf;
   color: #666;
   border-radius: 10rpx;
}
